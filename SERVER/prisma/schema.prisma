generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String? // nullable for Google users
  salt       String? // nullable for Google users
  provider   String // "email" | "google"
  providerId String? // Google UID (null for email users)
  imageData  Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  order Order[]
}

model Order {
  id          String   @id @default(uuid())
  userId      String
  orderId     String   @unique
  paymentId   String
  userName    String
  productName String
  totalAmount Float
  address     Json
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id]) // foreign key

  @@index([orderId])
  @@index([userId])
  @@index([paymentId])
}
